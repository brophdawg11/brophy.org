{
  "private": true,
  "name": "brophy.org",
  "version": "3.0.0",
  "description": "Matt Brophy's Personal Website",
  "author": "Matt Brophy <matt@brophy.org>",
  "license": "MIT",
  "homepage": "https://www.brophy.org",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brophdawg11/brophy.org.git"
  },
  "scripts": {
    "build": "remix vite:build",
    "clean": "rm -rf .cache/ && rm -rf build/ && rm -rf public/build/",
    "deploy": "fly deploy --remote-only",
    "dev": "node ./server.js",
    "lint": "eslint --cache --max-warnings 0 .",
    "prepare": "husky",
    "start": "NODE_ENV=production node ./server.js",
    "typecheck": "tsc",
    "validate": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@remix-run/css-bundle": "2.10.0",
    "@remix-run/express": "2.10.0",
    "@remix-run/node": "2.10.0",
    "@remix-run/react": "2.10.0",
    "cheerio": "1.0.0-rc.12",
    "compression": "1.7.4",
    "express": "4.19.2",
    "front-matter": "4.0.2",
    "isbot": "5.1.1",
    "marked": "12.0.1",
    "marked-highlight": "2.1.1",
    "morgan": "1.10.0",
    "prismjs": "1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "1.5.0",
    "tiny-invariant": "1.3.3",
    "vague-time": "2.4.2"
  },
  "devDependencies": {
    "@remix-run/dev": "2.10.0",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/prismjs": "1.26.3",
    "@types/react": "18.2.64",
    "@types/react-dom": "18.2.21",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-markdown": "4.0.1",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "typescript": "5.4.2",
    "vite-tsconfig-paths": "4.3.1"
  }
