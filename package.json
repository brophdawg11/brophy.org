{
  "name": "brophy.org",
  "description": "Matt Brophy's personal website (brophy.org)",
  "version": "1.0.0",
  "private": true,
  "author": "Matt Brophy <matt@brophy.org>",
  "license": "MIT",
  "homepage": "https://github.com/brophdawg11/brophy.org",
  "main": "build.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brophdawg11/brophy.org.git"
  },
  "bugs": {
    "url": "https://github.com/brophdawg11/brophy.org/issues"
  },
  "keywords": [
    "brophy",
    "software",
    "web",
    "development",
    "javascript",
    "html",
    "css",
    "angular",
    "node"
  ],
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:middleware",
    "build:all": "CONFIG=all npm run _webpack --",
    "build:client": "CONFIG=client npm run _webpack --",
    "build:server": "CONFIG=server npm run _webpack --",
    "build:middleware": "CONFIG=middleware npm run _webpack --",
    "clean": "rm -rf dist && npm run fb:clean",
    "clean:all": "npm run clean && rm -rf node_modules",
    "dev": "NODE_ENV=local npm run build && NODE_ENV=local npm run start",
    "fb": "firebase",
    "fb:build": "npm run clean && npm run build && npm run fb:copy",
    "fb:clean": "rm -rf public && rm -rf functions/src && rm -rf functions/dist",
    "fb:copy": "npm run fb:copy:server && npm run fb:copy:dist && npm run fb:copy:static",
    "fb:copy:server": "mkdir -p functions/src && cp -R src/server functions/src/ && cp src/index.tpl.html functions/src/",
    "fb:copy:static": "mkdir -p public && cp -R static public/",
    "fb:copy:dist": "mkdir -p public && cp -R dist public/ && cp -R dist functions/",
    "fb:deploy": "firebase deploy",
    "fb:serve": "firebase serve -p 8080",
    "lint": "eslint --ext .js,.vue .",
    "nuke": "npm run clean && rm -rf node_modules && rm -rf .icon_cache && npm install",
    "test": "jest",
    "precommit": "npm run lint && npm run test",
    "start": "node src/server/dev-server.js",
    "_webpack": "webpack --config build/webpack.$CONFIG.config.js --progress --hide-modules"
  },
  "dependencies": {
    "compression": "1.7.2",
    "express": "4.16.3",
    "lodash-es": "4.17.10",
    "logatim": "0.9.0",
    "highlight.js": "9.12.0",
    "marked": "0.3.9",
    "moment": "2.20.1",
    "vue": "2.5.16",
    "vue-cookie": "1.1.4",
    "vue-router": "3.0.1",
    "vue-server-renderer": "2.5.16",
    "vuex": "3.0.1",
    "reading-time": "1.1.0"
  },
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.16",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.4",
    "babel-loader": "7.1.4",
    "babel-plugin-lodash": "3.3.2",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-3": "6.24.1",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-vue": "4.5.0",
    "firebase-tools": "3.18.4",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "jest-serializer-vue": "1.0.0",
    "node-sass": "4.9.0",
    "sass-loader": "7.0.1",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "vue-jest": "2.6.0",
    "vue-loader": "15.1.0",
    "vue-template-compiler": "2.5.16",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.2",
    "webpack-hot-server-middleware": "0.5.0",
    "webpack-merge": "4.1.2"
  }
}
