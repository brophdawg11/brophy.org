{
  "private": true,
  "name": "brophy.org",
  "version": "3.0.0",
  "description": "Matt Brophy's Personal Website",
  "author": "Matt Brophy <matt@brophy.org>",
  "license": "MIT",
  "homepage": "https://www.brophy.org",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brophdawg11/brophy.org.git"
  },
  "scripts": {
    "build": "remix vite:build",
    "clean": "rm -rf .cache/ && rm -rf build/ && rm -rf public/build/",
    "deploy": "fly deploy --remote-only",
    "dev": "remix vite:dev",
    "lint": "eslint --cache --max-warnings 0 .",
    "prepare": "husky install",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "validate": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@remix-run/css-bundle": "2.8.1",
    "@remix-run/node": "2.8.1",
    "@remix-run/react": "2.8.1",
    "@remix-run/serve": "2.8.1",
    "cheerio": "1.0.0-rc.12",
    "front-matter": "4.0.2",
    "isbot": "3.6.12",
    "marked": "4.3.0",
    "prismjs": "1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "1.5.0",
    "tiny-invariant": "1.3.1",
    "vague-time": "2.4.2"
  },
  "devDependencies": {
    "@remix-run/dev": "2.8.1",
    "@types/marked": "4.3.1",
    "@types/prismjs": "1.26.0",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-markdown": "3.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "4.3.1"
  }
}
